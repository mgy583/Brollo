version: '3.8'

services:
  mongodb:
    image: mongo:7.0
    ports:
      - "27017:27017"
    environment:
      MONGO_INITDB_ROOT_USERNAME: admin
      MONGO_INITDB_ROOT_PASSWORD: password
    volumes:
      - mongodb_data:/data/db

  postgres:
    image: postgres:16
    ports:
      - "5432:5432"
    environment:
      POSTGRES_USER: admin
      POSTGRES_PASSWORD: password
      POSTGRES_DB: abook_auth
    volumes:
      - postgres_data:/var/lib/postgresql/data

  redis:
    image: redis:7.2-alpine
    ports:
      - "6379:6379"
    volumes:
      - redis_data:/data

  user-service:
    build:
      context: .
      dockerfile: backend/Dockerfile
    command: user-service
    ports:
      - "3000:3000"
    environment:
      MONGO_URI: mongodb://admin:password@mongodb:27017
      REDIS_URI: redis://redis:6379
      JWT_SECRET: your_secret_key_change_in_production
    depends_on:
      - mongodb
      - redis

  account-service:
    build:
      context: .
      dockerfile: backend/Dockerfile
    command: account-service
    ports:
      - "3001:3001"
    environment:
      MONGO_URI: mongodb://admin:password@mongodb:27017
      REDIS_URI: redis://redis:6379
      JWT_SECRET: your_secret_key_change_in_production
    depends_on:
      - mongodb
      - redis

  transaction-service:
    build:
      context: .
      dockerfile: backend/Dockerfile
    command: transaction-service
    ports:
      - "3002:3002"
    environment:
      MONGO_URI: mongodb://admin:password@mongodb:27017
      REDIS_URI: redis://redis:6379
      JWT_SECRET: your_secret_key_change_in_production
    depends_on:
      - mongodb
      - redis

  budget-service:
    build:
      context: .
      dockerfile: backend/Dockerfile
    command: budget-service
    ports:
      - "3003:3003"
    environment:
      MONGO_URI: mongodb://admin:password@mongodb:27017
      REDIS_URI: redis://redis:6379
      JWT_SECRET: your_secret_key_change_in_production
    depends_on:
      - mongodb
      - redis

  report-service:
    build:
      context: .
      dockerfile: backend/Dockerfile
    command: report-service
    ports:
      - "3004:3004"
    environment:
      MONGO_URI: mongodb://admin:password@mongodb:27017
      REDIS_URI: redis://redis:6379
    depends_on:
      - mongodb
      - redis

  quote-service:
    build:
      context: .
      dockerfile: backend/Dockerfile
    command: quote-service
    ports:
      - "3005:3005"
    environment:
      MONGO_URI: mongodb://admin:password@mongodb:27017
      REDIS_URI: redis://redis:6379
    depends_on:
      - mongodb
      - redis

  frontend:
    build:
      context: .
      dockerfile: frontend/Dockerfile
    ports:
      - "80:80"
    depends_on:
      - user-service
      - account-service
      - transaction-service
      - budget-service
      - report-service
      - quote-service

volumes:
  mongodb_data:
  postgres_data:
  redis_data:
