FROM rust:1.75 as builder

WORKDIR /app
COPY backend/ .
RUN cargo build --release

FROM debian:bookworm-slim
RUN apt-get update && apt-get install -y libssl3 ca-certificates && rm -rf /var/lib/apt/lists/*

COPY --from=builder /app/target/release/user-service /usr/local/bin/
COPY --from=builder /app/target/release/account-service /usr/local/bin/
COPY --from=builder /app/target/release/transaction-service /usr/local/bin/
COPY --from=builder /app/target/release/budget-service /usr/local/bin/
COPY --from=builder /app/target/release/report-service /usr/local/bin/
COPY --from=builder /app/target/release/quote-service /usr/local/bin/

EXPOSE 3000 3001 3002 3003 3004 3005
